<Window x:Class="WpfApp6.GeneracjaTestowWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp6"
        mc:Ignorable="d"
        Title="Ile testów wygenerować?" Height="200" Width="270"  ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Label Content="Liczba testów do wygenerowania:" Grid.Row="0" Grid.Column="0" Margin="10"/>
        <TextBox Grid.Row="0" Grid.Column="1" MaxHeight="30" Width="30" Margin="10" PreviewTextInput="NumberValidationTextBox" Name="l_TestowTextBox" VerticalContentAlignment="Center"/>
        <Label Content="Liczba pytań w testach:" Grid.Row="1" Grid.Column="0" Margin="10"/>
        <TextBox Grid.Row="1" Grid.Column="1" MaxHeight="30" Width="30" Margin="10" PreviewTextInput="NumberValidationTextBox" Name="l_PytanTextBox" VerticalContentAlignment="Center"/>
        <Button Content="Ok" Grid.Column="1" Grid.Row="2"  Height="30" Margin="10" Click="okClick"/>
    </Grid>
    
</Window>
